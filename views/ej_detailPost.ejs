    </tr>
    <tr>
        <th>게시글 내용</th>
        <td class="content" style="word-wrap: break-word;">
        <%= post.content %>
            <% if (post.imagePath && post.imageName !== '') { %>
                <ul style="list-style-type: none; padding-left: 0;">
                    <% const imageNames = post.imageName.split(';'); %>
                    <% const imagePaths = post.imagePath.split(';'); %>
                    <% for (let i = 0; i < imageNames.length; i++) { %>

                        <% const extension = imageNames[i].split('.').pop(); %>
                        <% if (['jpg', 'jpeg', 'png'].includes(extension)) { %>
                            <li style="text-align: center;">
                                <img src="/uploads/<%= imagePaths[i] %>" alt="<%= imageNames[i] %>" style="max-width: 100%; height: auto;">
                            </li>
                        <% } %>
                    <% } %>
                </ul>
            <% } %>
        </td>
    </tr>
    <tr>
        <th>생성일</th>
        <td><%= post.created_at %></td>
    </tr>
    <tr>
        <th>조회수</th>
        <td><%= post.views %></td>
    </tr>
</table>


<!-- 댓글 섹션 -->
<div class="comment-section">
    <div class="comment-header">댓글</div>
    <% if (comments && comments.length > 0) { %>
        <% comments.forEach(comment => { %>
            <div class="comment">
                <p><%= comment.nickname %>
                    <% if (comment.user_code == userId) { %>
                        (본인)
                    <% } %>
                    &nbsp<%= comment.created_at %>
                </p>
                <p class="comment-content" data-comment-id="<%= comment.id %>"><%= comment.content %></p> <!-- 여기서 '.comment-content'를 추가했습니다. -->
                <div class="comment-buttons">
                    <a href="#" class="reply-button" data-comment-id="<%= comment.id %>">답글쓰기</a>
                    <% if (comment.user_code == userId) { %> <!-- 작성자 본인의 댓글일 경우 -->
                    <button class="edit-button" data-comment-id="<%= comment.id %>">수정</button> <!-- 'data-comment-id' 속성 추가 -->
                    <form action="/ej_deleteComment/<%= comment.id %>" method="POST" style="display: inline;">
                        <input type="hidden" name="boarderCode" value="<%= post.id %>">
                        <button type="submit">삭제</button>
                    </form>
                    <% } %>
                </div>
                <% if (comment.children && comment.children.length > 0) { %>
                    <% comment.children.forEach(childComment => { %>
                        <div class="comment reply-form">
                            <p><%= childComment.author %>
                                <% if (childComment.user_code == userId) { %>
                                    (본인)
                                <% } %>
                                &nbsp<%= childComment.created_at %>
                            </p>
                            <p class="comment-content" data-comment-id="<%= childComment.id %>"><%= childComment.content %></p> <!-- 여기서 '.comment-content'를 추가했습니다. -->
                            <div class="comment-buttons">
                                <a href="#" class="reply-button" data-comment-id="<%= comment.id %>">답글쓰기</a>
                                <% if (childComment.user_code == userId) { %> <!-- 작성자 본인의 댓글일 경우 -->
                                <button class="edit-button" data-comment-id="<%= childComment.id %>">수정</button> <!-- 'data-comment-id' 속성 추가 -->
                                <form action="/ej_deleteComment/<%= childComment.id %>" method="POST" style="display: inline;">
                                    <input type="hidden" name="boarderCode" value="<%= post.id %>">
                                    <button type="submit">삭제</button>
                                </form>
                                <% } %>
                            </div>
                            </p>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        <% }); %>
    <% } else { %>
        <p>댓글이 없습니다.</p>
    <% } %>
</div>
<div class="comment-form">
    <form action="/ej_addComment" method="POST">
        <textarea class="comment-input" name="content" rows="5" placeholder="'<%= username%>'님 댓글을 남겨보세요" required></textarea><br>
        <input type="hidden" name="boarder_code" value="<%= post.id %>">
